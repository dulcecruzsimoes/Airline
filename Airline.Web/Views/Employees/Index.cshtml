@model IEnumerable<Airline.Web.Models.EmployeeViewModel>

@{
    ViewData["Title"] = "Active Employees";
}

@section Style{

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />
    <style>


        label, input {
            color: #fff;
        }

        legend {
            color: #fff;
        }

        .control-wrapper {
            color: #fff;
        }

        th, td {
            color: #fff;
            background-color: #242333;
        }

        thead tr th {
            color: #6feaf6;
        }

        tfoot tr th {
            color: #6feaf6;
        }

        input {
            color: black;
        }

        #example_info {
            color: lightgray;
        }
    </style>
}

<div class="site-section" id="next" style="width:100%">
    <div class="container" style="width:100%">
        <h2>Employees List</h2>

        <p>
            <a asp-action="Create" class="btn btn-primary">Add Employee</a>
        </p>

        <br />

        <table id="example">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>EMail</th>
                    <th>Phone Number</th>
                    <th>Department</th>
                    <th>IsActive</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Department)</td>
                    <td>@Html.DisplayFor(modelItem => item.isActive)</td>
                    <td>
                        @*<a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-warning">Edit</a>*@
                        <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-danger">Edit</a>                        
                    </td>
                </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Name</th>
                    <th>EMail</th>
                    <th>Phone Number</th>
                    <th>Department</th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>


@section Scripts{
    <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable();
        });

    </script>
}
