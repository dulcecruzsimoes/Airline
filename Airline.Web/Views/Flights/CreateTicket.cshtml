@model TicketModelCreate

@{
    ViewData["Title"] = "New Ticket";
}


@section Style{

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

    <style>

        label, input {
            color: #fff;
        }

        legend {
            color: #fff;
        }

        .control-wrapper {
            color: #fff;
        }

        th, td {
            color: white;
            background-color: #242333;
        }
    </style>

}

@if (string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="site-section" id="next">
        <div class="container" style="width:100%">

            <h2>Choose Client</h2>
            <br />

            <br />
            <form asp-action="Booking">
                <span asp-validation-for="UserEmail" class="text-danger"></span>
                <br />
                <br />
                <table id="example">
                    <thead>
                        <tr>

                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Tax Number</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Users)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.TaxNumber)</td>
                                <td>
                                    <input type="radio" asp-for="UserEmail" value="@item.Email" id="@item.Email" style="background-color:#242333;" />

                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>

                    </tfoot>
                </table>

                <div class="form-group">
                    <input type="hidden" asp-for="FlightId" />
                    <input type="submit" value="Confirm" class="btn btn-success" />
                    <a class="btn btn-info" asp-action="Index">Back to List</a>
                </div>

            </form>
        </div>
    </div>


}

else
{

        <div class="site-section" id="next">
            <div class="container">
                <h2>@ViewBag.Message</h2>
                <br />
                <div class="form-group">
                    <a class="btn btn-success" asp-action="Index">Back to Home</a>
                </div>
            </div>
        </div>
  
}

        @section Scripts {

            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


            <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
            <script type="text/javascript">
                $(document).ready(function () {
                    $('#example').DataTable();
                });

            </script>


        }
