@model Airline.Web.Models.CreateFlightViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="site-section" id="next">
    <div class="container">
        <h2>Create Flight</h2>
        <br />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group">
                        <label asp-for="FromId" class="control-label"></label>
                        <select asp-for="FromId" asp-items="Model.Destinations" class="form-control"></select>
                        <span asp-validation-for="FromId" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <label asp-for="ToId" class="control-label"></label>
                        <select asp-for="ToId" asp-items="Model.Destinations" class="form-control"></select>
                        <span asp-validation-for="ToId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="AirplaineId" class="control-label"></label>
                        <select asp-for="AirplaineId" asp-items="Model.Airplaines" class="form-control"></select>
                        <span asp-validation-for="AirplaineId" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Departure" class="control-label"></label>
                        <input asp-for="Departure" class="form-control" />
                        <span asp-validation-for="Departure" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Arrival" class="control-label"></label>
                        <input asp-for="Arrival" class="form-control" />
                        <span asp-validation-for="Arrival" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" />
                        <a class="btn btn-info" asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}